<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Lo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtView2"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtView3"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/txtView1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/txtView2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="234"
        android:textSize="32sp"
        android:layout_marginStart="16dp"
        android:onClick="ButClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Button2"
        android:layout_marginLeft="16dp"
        android:background="@drawable/rectongle"/>
    <Button
        android:id="@+id/Button2"
        android:layout_width="0dp"
        android:text="154"
        android:textSize="32sp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="16dp"
        android:onClick="ButClick"
        app:layout_constraintBottom_toBottomOf="@id/Button1"
        app:layout_constraintStart_toEndOf="@id/Button1"
        android:background="@drawable/rectongle"/>
    <Button
        android:id="@+id/Button3"
        android:layout_width="0dp"
        android:text="136"
        android:textSize="32sp"
        android:onClick="ButClick"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/Button1"
        app:layout_constraintBottom_toTopOf="@id/Button1"
        app:layout_constraintEnd_toStartOf="@id/Button4"
        android:background="@drawable/rectongle"/>
    <Button
        android:id="@+id/Button4"
        android:layout_width="0dp"
        android:text="984"
        android:textSize="32sp"
        android:onClick="ButClick"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@id/Button2"
        app:layout_constraintStart_toEndOf="@id/Button3"
        android:background="@drawable/rectongle"/>


</androidx.constraintlayout.widget.ConstraintLayout>